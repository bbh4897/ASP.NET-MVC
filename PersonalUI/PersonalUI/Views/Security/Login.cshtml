@model PersonalUI.Models.EntitityFramework.Kullanici
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/site.css" rel="stylesheet" />
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>


    <title>Login</title>
</head>
<body>
    <br /><br />
    <div class="container">
        <h2>Giriş Yapınız</h2>
        @ViewBag.Message
        @using (Html.BeginForm("Login","Security",FormMethod.Post))
        {
            <form class="form" action="">
                <div class="form-group">
                    @Html.LabelFor(m => m.Ad)
                    @Html.TextBoxFor(m => m.Ad, new { @class = "form-control", placeholder = "Kullanıcı Adı" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Sifre)
                    @Html.TextBoxFor(m => m.Sifre, new { @class = "form-control", placeholder = "Şifre" })
                </div>

                <div class="form-group">
                    <input type="submit" name="submit" class="btn btn-info btn-md" value="Giriş">
                </div>
            </form>
        }


    </div>
   
</body>
</html>
